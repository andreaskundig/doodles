{
  "private": true,
  "scripts": {
    "build": "npm run build:clean; concurrently 'npm run build:scripts' 'npm run build:styles'; npm run build:revision",
    "build:clean": "concurrently 'node build/clean.js dist' 'node build/clean.js docs'",
    "build:scripts": "rollup -c",
    "build:styles": "node build/styles.js 'src/styles' 'dist/assets'",
    "build:revision": "node build/revision.js 'dist/assets' 'docs/assets' 'src/views' 'docs'",
    "start": "concurrently 'npm run start:serve' 'npm run start:watch'",
    "start:serve": "browser-sync docs -w",
    "start:watch": "nodemon -e css,js -x 'npm run build'"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.4",
    "concurrently": "^3.6.0",
    "escape-string-regexp": "^1.0.5",
    "fs-extra": "^7.0.0",
    "globby": "^8.0.1",
    "node-rev": "^1.3.0",
    "nodemon": "^1.18.3",
    "rev-file": "^3.0.0",
    "rollup": "^0.63.2",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0"
  },
  "dependencies": {
    "stream-replace": "^1.0.0"
  }
}
